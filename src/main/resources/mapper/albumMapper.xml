<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.newbee.smart_album.dao.mapper.AlbumMapper">

    <insert id="insert" parameterType="com.newbee.smart_album.entity.Album">
        insert into album (name,user_id,cover,create_time,last_edit_time,description,is_default_album)
         VALUES (#{name},#{user_id},#{cover},#{create_time},#{last_edit_time},#{description},#{is_default_album})
    </insert>

    <select id="selectDefaultAlbumIdByUserId" resultType="com.newbee.smart_album.entity.Album">
        select album_id from album where user_id=#{user_id} and name='default_album'
    </select>

</mapper>